<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:id="@+id/relative_pocasie"
    tools:context=".Fragments.KalendarFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/City_pocasie"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="35sp"
    android:textStyle="bold"
    android:textColor="@color/black">
</TextView>

        <TextView
            android:id="@+id/sky_pocasie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="120dp"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="210dp"
            android:textSize="55sp"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:id="@+id/huminidy_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="330dp"
            android:textSize="28sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/huminidy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="340dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/vlhkos">
        </TextView>
        <TextView
            android:id="@+id/wind_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="440dp"
            android:textSize="28sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/wind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="450dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/r_chlos_vetra">
        </TextView>
        <TextView
            android:id="@+id/pressure_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="550dp"
            android:textSize="24sp"
            android:textStyle="bold"
             >
        </TextView>
        <TextView
            android:id="@+id/pressure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="557dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="tlak vzduchu">
        </TextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sunny_sky"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/huminidy_sky"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="300dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/parttialy_sky"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/air_sky"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/huminidy_sky"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/air_pressure"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/air_sky"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cloudy_sky"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mix_snow_rain_sky"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rain_sky"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/snow_sky"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            >
        </androidx.appcompat.widget.AppCompatImageView>


</RelativeLayout>
</ScrollView>